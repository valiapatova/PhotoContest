@model Rating

@{
    ViewData["Title"] = "Rate";
}

<h1>Rate</h1>

<p>User: @this.Model.UserId</p>
<p>PhotoPost: @this.Model.PhotoPostId</p>

<h4>RATING</h4>

<hr />


<form asp-controller="PhotoPost" asp-action="Rate" method="post" >
    <div class="form-group"  >
        <label asp-for="RatingValue"></label>
        <input type="number" asp-for="RatingValue" class="form-control" />
        <span asp-validation-for="RatingValue" class="text-danger"></span>
    </div>
    <div class="form-group"  >
        <label asp-for="Comment"></label>
        <input type="text" asp-for="Comment" class="form-control" />
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
        <hr />
        <div class="from-group">
            <input type="hidden" name="photoPostId" value="@this.Model.PhotoPostId" />
            <input type="hidden" name="userId" value="@this.Model.UserId" />
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

